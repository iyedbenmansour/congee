{# templates/online_job/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Apply for Online Job{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Apply for Online Job</h1>
    <p class="mb-4">For leave request #{{ leaveRequest.id }} ({{ leaveRequest.startDate|date('Y-m-d') }} to {{ leaveRequest.endDate|date('Y-m-d') }})</p>
    
    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.post) }}
        {{ form_row(form.startDate) }}
        {{ form_row(form.endDate) }}
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Submit') }}</button>
            <a href="{{ path('employee_leave_requests', {'employeeId': leaveRequest.employeeId}) }}" class="btn btn-secondary">Cancel</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}