{# templates/leave_ranking/company.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Employee Leave Ranking - Company #{{ companyId }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Employee Leave Ranking for Company #{{ companyId }}</h1>
    
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="h5 mb-0">Employees Ranked by Leave Requests (Least to Most)</h2>
        </div>
        
        <div class="card-body">
            {% if leaveRanking is empty %}
                <div class="alert alert-info">No leave requests found for this company.</div>
            {% else %}
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Employee ID</th>
                            <th>Number of Leave Requests</th>
                            <th>Comment</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ranking in leaveRanking %}
                            <tr>
                                <td>{{ ranking.rank }}</td>
                                <td>{{ ranking.employeeId }}</td>
                                <td>{{ ranking.leaveCount }}</td>
                                <td>{{ ranking.comment }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
    
    <div class="mt-3">
        <a href="/" class="btn btn-secondary">Back</a>
    </div>
</div>
{% endblock %}
    